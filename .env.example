# HIPAA RAG System Environment Variables
# =======================================
# Copy this file to .env and fill in your values

# OpenAI API Key (required)
OPENAI_API_KEY=sk-your-api-key-here

# Database Configuration (uses DB_ prefix)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=hipaa
DB_USER=user
DB_PASSWORD=pass
DB_MIN_POOL_SIZE=2
DB_MAX_POOL_SIZE=10

# Search Configuration (uses SEARCH_ prefix)
SEARCH_VECTOR_WEIGHT=0.6
SEARCH_KEYWORD_WEIGHT=0.4
SEARCH_TOP_K=15
SEARCH_RERANK_TOP_K_CITATION=2
SEARCH_RERANK_TOP_K_EXPLANATION=5
SEARCH_RERANK_TOP_K_REFERENCE=7

# Chunking Configuration (uses CHUNK_ prefix)
CHUNK_MAX_CHUNK_SIZE=7500
CHUNK_MIN_CHUNK_SIZE=3000
CHUNK_OVERLAP_SIZE=200

# Model Configuration
EMBEDDING_MODEL=text-embedding-3-small
RERANK_MODEL=gpt-4o-mini
GENERATION_MODEL=gpt-3.5-turbo
CLASSIFICATION_MODEL=gpt-4o-mini

# Application Settings
DEBUG=false
